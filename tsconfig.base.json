{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@intenseye/context": ["libs/context/src/index.ts"],
      "@intenseye/core": ["libs/core/src/index.ts"],
      "@intenseye/fe-task-constants": ["libs/fe-task-constants/src/index.ts"],
      "@intenseye/fe-task-ui": ["libs/fe-task-ui/src/index.ts"],
      "@intenseye/services": ["libs/services/src/index.ts"],
      "@intenseye/states": ["libs/states/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
